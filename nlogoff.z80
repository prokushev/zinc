	.z80
	cseg
;
CPM3	EQU	0		;Don't perform CP/M 3 check
CPNET	EQU	1		;Perform CP/NET check
Z80	EQU	1		;Perform Z80 check
;
	INCLUDE	ZINCHEAD.INC
;
	EXTRN	PRINT		; SYSLIB
;

BUFF	EQU	0080h

LOGOFF	EQU	65
CFGTBL	EQU	69

ACTIVE	EQU	0001$0000b

MAIN:	LD	E, 0
	LD	HL, BUFF
	LD	A, (HL)
	OR	A
	JR	Z, LOGOFF
	LD	C, A
	XOR	A

SKIPSPACE:
	INC	HL
	LD	A, (HL)
	CP	' '
	JR	NZ, CHAR
	DEC	C
	JR	NZ, SKIPSPACE
	JR	LOGOFF

CHAR:
	CP	'['
	JR	NZ, ERROR

GETID:
	INC	HL
	DEC	C
	JR	Z, ERROR
	LD	A,(HL)
	CP	']'
	JR	Z, LOGOFF
	SUB	'0'
	CP	10
	JP	C,UPDATEID
	ADD	('0'-'A'+10) and 0ffh
	CP	16
	JR	NC, ERROR

UPDATEID:
	PUSH	AF
	LD	A,E
	ADD	A
	ADD	A
	ADD	A
	ADD	A
	LD	E,A
	POP	AF
	ADD	E
	LD	E,A
	JR	GETID


ERROR:
        CALL	PRINT
	DEFB	'Illegal LOGOFF command', 0
	JR	EXIT

LOGOFF:
	LD	C,LOGOFF
	CALL	BDOS
	INC	A
	JR	NZ, OK
	CALL	PRINT
	DEFB	'LOGOFF failed', 0
	JR	EXIT

OK:
	LD	C,CFGTBL
	CALL	BDOS
	LD	A,(HL)
	AND	NOT ACTIVE
	LD	(HL),A

EXIT:
	RET

;
	DSEG
;

	END

